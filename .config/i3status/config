general {
	output_format = "i3bar"
	colors = true
	interval = 1
}

// order += "ipv6"

order += "wireless wlp0s20f3"
wireless wlp0s20f3 {
	format_up = "W: Up (%essid)"
	format_down = "W: Down"
}

order += "volume master"
volume master {
	format = "V: %volume"
	format_muted = "V: muted (%volume)"
	device = "default"
} 

order += "battery 0"
battery 0 {
	format = "%status %percentage %remaining remaining"
	format_down = "No battery"
	status_chr = "Charging"
	status_bat = "on Battery"
	status_unk = "Unknown"
	status_full = "Full"
	path = "/sys/class/power_supply/BAT%d/uevent"
	low_threshold = 20
}

order += "tztime ams"
tztime ams {
	format = "%Y-%m-%d %H:%M:%S"
	timezone = "Europe/Amsterdam"
}

